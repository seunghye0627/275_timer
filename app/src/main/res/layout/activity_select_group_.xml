<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_group_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="14dp"
                android:textColor="@color/whiteColor"
                android:text="TestID"
                android:textSize="20dp"></TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/custombutton_orange"
                android:text="로그아웃"></Button>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2px"
            android:background="@color/whiteColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="300dp"
            android:layout_marginLeft="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 속한 그룹"
                android:textSize="30dp"
                android:textColor="@color/whiteColor"></TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="2px"
            android:background="@color/whiteColor"/>

        <Button
            android:id="@+id/btn_addgroup"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/whiteColor"
            android:background="@drawable/custombutton_orange"
            android:text="+ 그룹 추가"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>